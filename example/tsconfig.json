{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "paths": {
      "@jellyfish-dev/react-native-membrane-webrtc": ["../src/index.tsx"],
      "@components/*": ["./src/components/*"],
      "@colors": ["./src/shared/colors.ts"],
      "@screens/*": ["./src/screens/*"],
      "@model/*": ["./src/model/*"],
      "@utils": ["./src/shared/utils.ts"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"]
}
